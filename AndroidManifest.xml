<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udn4hc.calendarwidget"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.udn4hc.calendarwidget.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.udn4hc.calendarwidget.CreateEvent"
            android:label="@string/title_activity_create_event"
            android:parentActivityName="com.udn4hc.calendarwidget.GetEvents" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.udn4hc.calendarwidget.GetEvents" />
        </activity>
        <activity
            android:name="com.udn4hc.calendarwidget.GetEvents"
            android:label="@string/title_activity_get_events"
            android:parentActivityName="com.udn4hc.calendarwidget.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.udn4hc.calendarwidget.MainActivity" />
        </activity>
        <activity
            android:name="com.udn4hc.calendarwidget.UpdateEvent"
            android:label="@string/title_activity_update_event"
            android:parentActivityName="com.udn4hc.calendarwidget.GetEvents" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.udn4hc.calendarwidget.GetEvents" />
        </activity>
    </application>

</manifest>